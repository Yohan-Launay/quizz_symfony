{% extends 'base.html.twig' %}

{% block header %}
    <header id="welcome_header">
        <nav >
            <ul>
                <li>
                    <a href="{{ path('app_register') }}">S'inscrire</a>
                </li>
                <li>
                    <!-- Button trigger modal -->
                    <a type="button" data-bs-toggle="modal" data-bs-target="#modalConnect">Se connecter</a>
                </li>
            </ul>

        </nav>
        <!-- Modal -->
        <div class="modal fade" id="modalConnect" tabindex="-1" aria-labelledby="modalConnectLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Connexion</h1>
{#                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>#}
                    <div class="modal-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.nickname }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
                            <div>
                                <div class="input_login">
                                    <div>
                                        <label for="inputEmail">Email</label>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                    </div>
                                </div>
                                <div class="input_login">
                                    <div>
                                        <label for="inputPassword">Password</label>
                                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                            #}
                            <div class="btn-modal">
                                <a href="{{ path('app_register') }}">S'inscrire</a>
                                <button class="button_sign_in" type="submit">
                                    Se connecter
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Button trigger modal -->



{% endblock %}
